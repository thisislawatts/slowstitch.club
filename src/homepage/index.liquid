{% include 'header' %}

<main>
  <div class="homepage__content">
    <h1>
      {{ title }}
    </h1>

    <p>
      {{ intro }}
    </p>
  </div>
  <ul class="link-items">
    {% for item in links %}
    <li>
      <a href="{{ item.link }}">
        <span>{{ item.name }}</span>
        {% if item.photo %}
        <img src="{{ item.photo | replace: '/src','' }}" alt="" aria-hidden="true" />
        {% endif %}
      </a>
    </li>
    {% endfor %}
  </ul>
</main>

{% include 'footer' %}