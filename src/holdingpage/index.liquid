      * {
        font-weight: 400;
        padding: 0;
        margin: 0;
        box-sizing: border-box;
      }
      html,
      body {
        background: #ecedef;
        font-family: Avenir, sans-serif;
        font-weight: 100;
        font-size: 1rem;
      }
      body {
        padding: 60px 40px;
      }
      a {
        color: inherit;
      }
      h1 {
        font-size: 1.75em;
        margin-bottom: 0.4em;
      }
